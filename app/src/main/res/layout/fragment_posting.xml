<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragments.PostingFragment">

    <ImageView
            android:id="@+id/user_thumb_posting"
            android:contentDescription="user_thumbnail"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_alignParentStart="true"
            tools:srcCompat="@drawable/ic_baseline_person_24"/>

    <TextView
            android:id="@+id/user_name_posting"
            android:text="username"
            android:layout_height="30dp"
            android:layout_width="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@id/user_thumb_posting"
            android:textColor="@color/black"
            android:textSize="20sp" />

    <TextView
            android:id="@+id/posting_background"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@id/user_thumb_posting"
            android:background="@color/gray"
            android:layout_alignParentBottom="true" />

    <EditText
            android:id="@+id/posting"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_below="@id/user_thumb_posting"
            android:layout_above="@id/reset_button"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="top"
            android:background="@color/white"
            android:autofillHints="게시글 작성"
            android:inputType="textMultiLine"
            tools:ignore="LabelFor"/>

    <Button
            android:id="@+id/reset_button"
            android:text="초기화"
            android:layout_width="128dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:layout_alignParentBottom="true"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/post_reset_background" />

    <Button
            android:id="@+id/upload_button"
            android:text="업로드"
            android:layout_width="128dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/post_upload_background" />

</RelativeLayout>